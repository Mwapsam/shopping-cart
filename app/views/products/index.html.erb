<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Products</h1>
    <%= link_to 'New product', new_product_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

    <div class="bg-white">
      <div class="max-w-2xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8">
        <div class="mt-6 grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
          <% @products.each do |product|%>
          <div class="group relative">
            <div class="w-full min-h-80 bg-gray-200 aspect-w-1 aspect-h-1 rounded-md overflow-hidden group-hover:opacity-75 lg:h-80 lg:aspect-none">
              <% if product.image.present? %>
                <%= link_to product_path(product.id) do %>
                    <%= image_tag product.image, class: "w-full h-full object-center object-cover lg:w-full lg:h-full" %>
                <% end %>
              <% else %>
                <%= image_tag('no-image.png') %>
              <% end %>
            </div>
            <div class="mt-4 flex justify-between">
              <div>
                <h3 class="text-sm text-gray-700">
                  <%= link_to product_path(product.id), class: "text-blue-500" do %>
                    <span aria-hidden="true" class="absolute inset-0"></span>
                    <%= product.name %>
                  <% end %>
                </h3>
                  <p class="text-sm text-gray-500">
                    <%= product.description %>
                  </p>
              </div>
              <p class="text-sm font-medium text-gray-900">$<%= product.price %></p>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
</div>
